    <EventFiltering>
        <RuleGroup name="technique_id=T1135" groupRelation="and">
            <ProcessCreate onmatch="include">
                <OriginalFileName condition="is">net.exe</OriginalFileName>
                <Rule groupRelation="or">
                    <CommandLine condition="contains">net share</CommandLine>
                    <CommandLine condition="contains">net  share</CommandLine>
                    <CommandLine condition="contains">net view</CommandLine>
                    <CommandLine condition="contains">net  view</CommandLine>
                    <CommandLine condition="contains">"C:\Windows\system32\net.exe" share</CommandLine>
                    <CommandLine condition="contains">"C:\Windows\system32\net.exe" view</CommandLine>
                </Rule>
                
            </ProcessCreate> 
        </RuleGroup>
