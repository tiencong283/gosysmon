    <EventFiltering>
        <RuleGroup groupRelation="or">
            <ProcessCreate onmatch="include">
                <Rule name="technique_id=T1059" groupRelation="or">
                    <Image condition="image">C:\Windows\System32\cmd.exe</Image>
                </Rule>
            </ProcessCreate>
        </RuleGroup>
    </EventFiltering>
</Sysmon>