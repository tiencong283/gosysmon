<Sysmon schemaversion="4.30">
    <EventFiltering>
        <RuleGroup name="" groupRelation="or">
			<ProcessCreate onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<ParentImage condition="image">wmiprvse.exe</ParentImage>
					<OriginalFileName condition="is">wmiprvse.exe</OriginalFileName>
				</Rule> 
				<Rule name="technique_id=T1047" groupRelation="or">
					<OriginalFileName condition="is">mofcomp.exe</OriginalFileName>
					<OriginalFileName condition="is">ScrCons</OriginalFileName>
				</Rule>
				<Rule name="technique_id=T1047" groupRelation="or">
					<Image condition="begin with">C:\WINDOWS\system32\wbem\scrcons.exe</Image>
					<Image condition="image">c:\windows\system32\tasklist.exe</Image>
					<Image condition="image">c:\windows\system32\wbem\wmic.exe</Image>
				</Rule>
			</ProcessCreate>
            <NetworkConnect onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<Image condition="image">c:\windows\system32\wbem\wmic.exe</Image>
				</Rule>
            </NetworkConnect>
			<ImageLoad onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<ImageLoaded condition="end with">wmiutils.dll</ImageLoaded>
				</Rule>
			</ImageLoad>
			<FileCreate onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<TargetFilename  condition="begin with">C:\Windows\System32\Wbem</TargetFilename>
					<TargetFilename  condition="begin with">C:\Windows\SysWOW64\Wbem</TargetFilename>
					<Image  condition="begin with">c:\windows\system32\wbem\scrcons.exe</Image>
					<TargetFilename  condition="begin with">C:\Windows\SysWOW64\Wbem\wmic.exe</TargetFilename>
					<TargetFilename  condition="begin with">C:\Temp\</TargetFilename>
					<TargetFilename  condition="begin with">C:\PerfLogs\</TargetFilename>
					<TargetFilename  condition="begin with">C:\Users\Public\</TargetFilename>
					<TargetFilename  condition="contains">\AppData\Temp\</TargetFilename>
				</Rule>
				<Rule name="technique_id=T1047" groupRelation="or">
					<Image  condition="begin with">c:\windows\system32\wbem\scrcons.exe</Image>
				</Rule>
			</FileCreate>
			<RegistryEvent onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<TargetObject  condition="contains">HKLM\SYSTEM\CurrentControlSet\Control\CrashControl</TargetObject>
				</Rule>
			</RegistryEvent>
			<WmiEvent onmatch="include">
				<Rule name="technique_id=T1047" groupRelation="or">
					<Operation condition="is">Created</Operation>
				</Rule>
			</WmiEvent>
        </RuleGroup>
    </EventFiltering>
</Sysmon>


